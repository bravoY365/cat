/* pages/trade/trade.wxss */
.swiper-tab{width: 100%;text-align: center;line-height: 60rpx;}  
.swiper-tab-list{font-size: 30rpx;display: inline-block;width: 50%;  
    border-top: 2rpx solid #BDBDBD;border-bottom:2rpx solid #BDBDBD;}  
.swiper-tab-list.on{background:#A6A1D5;color:#fff;}  
  
.swiper-box{ display: block; width: 100%; height: 100%;overflow: hidden;}  
.swiper-box .params{display: flex;flex-wrap: wrap;justify-content:space-around;margin: 10rpx 0 16rpx 0;}
.swiper-box .params>view{width:150rpx;height:40rpx;}
.swiper-box .params .picker{color:#BDBDBD;font-size:24rpx;border:2rpx solid #BDBDBD;border-radius: 10rpx;padding:0 0 0 12rpx;} 
.swiper-box .items{display: flex;flex-wrap:wrap;}
.swiper-box .items image{width: 170rpx;height: 170rpx;border-radius: 10rpx;margin:8rpx;} 